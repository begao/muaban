<%- partial ('../common/admin_nav.ejs') %>

<div class="container" id="page-user_manager">
  <h2>Danh sách thành viên
    <button id="removeid" type="button" class="btn btn-danger pull-right"><i class="fa fa-trash-o fa-lg"></i> Xóa hết</button>
  </h2>

  <table class="table table-hover" id="manage_user">
    <thead>
    <tr>
      <th>ID</th>
      <th>Hình</th>
      <th>Tên</th>
      <th>Nhóm</th>
      <th>Email</th>
      <th>Điểm</th>
      <th>Sửa</th>
      <th>Xóa</th>
    </tr>
    </thead>
    <tbody>
    <% _.each(users, function(user) { %>
    <tr>
      <td><label class="checkbox-inline"><input name="idCheck[]" type="checkbox" value="<%= user.id %>"></label></td>
      <td><%= user.avatar %></td>
      <td><%= user.name %></td>
      <td><%= user.group  %></td>
      <td><%= user.email %></td>
      <td><%= user.point %></td>
      <td><a class="btn btn-success" href="/admin/user/<%= user.id %>"><i class="fa fa-pencil fa-lg"></i> Sửa</a></td>
      <td><a class="btn btn-danger" href="/admin/user/del/<%= user.id %>"><i class="fa fa-trash-o fa-lg"></i> Xóa</a></td>
    </tr>
    <% }) %>
    </tbody>
  </table>
</div>

